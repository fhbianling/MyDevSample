<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bian.mydevsample.ui.qqclean.QQCleanAnimView
        android:id="@+id/radar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:strokeWidth="15dp"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/radar"
        android:layout_alignEnd="@id/radar"
        android:layout_alignLeft="@id/radar"
        android:layout_alignRight="@id/radar"
        android:layout_alignStart="@id/radar"
        android:layout_alignTop="@id/radar"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="48sp"
        tools:text="77%"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="start"
        android:text="start"/>
</RelativeLayout>